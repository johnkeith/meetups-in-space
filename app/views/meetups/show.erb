<h3><%= @meetup.name %></h3>
<p><%= @meetup.description %></p>
<p><%= @meetup.location %></p>

<% @attending.each do |attendee| %>
  <ul class="attending">
    <li><%= attendee.username %></li>
    <li><img width="50px" height="50px" src="<%= attendee.avatar_url %>" /></li>
  </ul>
<% end %>

